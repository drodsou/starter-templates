{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",                     
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["node", "express", "vite/client"],
    // "--removebellow-when-ready-for-prod": true,
    "noImplicitAny": false,
    "strictNullChecks": false
  },
  "ts-node": {
    "transpileOnly": true
  }
}
