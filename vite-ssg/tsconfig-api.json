{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "noEmit": false, // emit /api
    "useDefineForClassFields": true,
    "moduleResolution": "Node",
    "strict": true,
    "sourceMap": false,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "outDir" : "dist/api",
    "allowJs": true
  },
  "include": ["src/api"]
}
